<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cont"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        tools:context="fatihdemirag.net.derstakip.DersEkle">

        <TextView
            android:id="@+id/dersAdiTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ders Adı"
            android:layout_marginStart="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/dersAdi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dersAdi"
            android:layout_marginStart="16dp"
            android:text="Ders Başlangıç Saati"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TimePicker
            android:id="@+id/bitisSaat"
            android:layout_width="161dp"
            android:layout_height="194dp"
            android:timePickerMode="spinner"
            android:layout_alignTop="@+id/baslangicSaat"
            android:layout_alignEnd="@+id/dersEkle" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ders Bitiş Saati"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="299dp"
            android:layout_below="@+id/dersAdi"
            android:layout_alignStart="@+id/bitisSaat" />

        <TimePicker
            android:id="@+id/baslangicSaat"
            android:layout_width="161dp"
            android:layout_height="194dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:timePickerMode="spinner"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_editor_absoluteX="-24dp" />


        <Button
            android:id="@+id/dersEkle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dersi Ekle"
            app:layout_constraintLeft_toRightOf="@+id/dersAdi"
            tools:layout_editor_absoluteY="16dp"
            android:layout_below="@+id/gun"
            android:layout_alignStart="@+id/gun"
            android:layout_alignEnd="@+id/dersAdi" />

        <TextView
            android:id="@+id/gun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/baslangicSaat"
            android:text="Gun"
            android:visibility="visible" />

    </RelativeLayout>
</ScrollView>