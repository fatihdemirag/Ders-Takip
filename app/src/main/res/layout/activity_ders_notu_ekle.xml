<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fatihdemirag.net.dersprogram.DersNotuEkle">

    <EditText
        android:id="@+id/konu"
        android:layout_width="373dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Konu"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/not"
        android:layout_width="375dp"
        android:layout_height="139dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Not"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/konu"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/resimEkle"
        android:layout_width="72dp"
        android:layout_height="65dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/ic_add_a_photo_black_24dp"
        android:shadowColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/ekleButton"
        app:layout_constraintTop_toBottomOf="@+id/not" />

    <ImageView
        android:id="@+id/galeriResim"
        android:layout_width="369dp"
        android:layout_height="247dp"
        android:src="@drawable/blank"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/resimEkle"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="301dp" />

    <Button
        android:id="@+id/ekleButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_add_circle_black_24dp"
        android:shadowColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/not" />

</android.support.constraint.ConstraintLayout>
