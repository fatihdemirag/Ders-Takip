<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fatihdemirag.net.dersprogram.DersNotuGor">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <ImageView
                android:id="@+id/notGelenResim"
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:src="@mipmap/ic_launcher"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/notGelenBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="16dp"
                android:paddingLeft="17dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/notGelenResim"
                android:textIsSelectable="true"/>

            <TextView
                android:id="@+id/notGelen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="17dp"
                android:text="TextView"
                android:textIsSelectable="true"
                app:layout_constraintTop_toBottomOf="@+id/notGelenBaslik"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="11dp" />
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
