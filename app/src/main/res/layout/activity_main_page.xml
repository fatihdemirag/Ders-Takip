<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fatihdemirag.net.dersprogram.MainPage"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yenile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:weightSum="2">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dersProgrami"
                    android:background="@drawable/cardview_background"
                    android:text="Ders ProgramÄ±"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:drawableTop="@drawable/ic_notifications_black_24dp"
                    android:paddingRight="10dp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/notlar"
                    android:background="@drawable/cardview_background"
                    android:text="Notlar"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_notifications_black_24dp"
                    android:paddingRight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:weightSum="2">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/notHesaplama"
                    android:background="@drawable/cardview_background"
                    android:text="Not Hesaplama"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:drawableTop="@drawable/ic_notifications_black_24dp"
                    android:paddingRight="10dp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ayarlar"
                    android:background="@drawable/cardview_background"
                    android:text="Ayarlar"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_notifications_black_24dp"
                    android:paddingRight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardview_background"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gunText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center" />

                <ListView
                    android:id="@+id/gunlukListe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
